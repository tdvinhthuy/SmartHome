<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape  android:shape="rectangle">

            <corners android:radius="10dp" />
            <gradient
                android:angle="0"
                android:centerColor="#c0ebff"
                android:endColor="#c1e2ff"
                android:startColor="#c1e2ff" />
        </shape>
    </item>

    <!-- White Top color -->
    <item
        android:top="2dp"
        android:bottom="7dp"
        android:left="4dp"
        android:right="4dp">

        <shape  android:shape="rectangle">

            <solid android:color="#FFFFFF" />
            <corners android:radius="5dp" />


        </shape>

    </item>


</layer-list>